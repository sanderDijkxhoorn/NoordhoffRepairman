{
  "manifest_version": 2,

  "name": "Noordhoff Repairman",
  "description": "Deze extensie vult alle antwoorden automatisch in!",
  "version": "0.4",

  "author": "TechnologicNick & sanderDijkxhoorn",

  "browser_action": {
    "default_icon": "icons/icon19.png",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "storage",
    "activeTab",
    "*://player.online.noordhoff.nl/*",
    "*://numpscormprd.azurewebsites.net/Content/*",
    "*://cdpcontent.toegang.nu/*",
    "*://cdp.contentdelivery.nu/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://player.online.noordhoff.nl/*",
        "*://numpscormprd.azurewebsites.net/Content/*"
      ],
      "js": ["slave/injector.js"],
      "run_at": "document_end",
      "all_frames": true
    },
    {
      "matches": [
        "*://cdpcontent.toegang.nu/*",
        "*://cdp.contentdelivery.nu/*",
        "*://*.digitaal.noordhoff.nl/*"
      ],
      "js": ["slave_digilino/injector.js"],
      "run_at": "document_end",
      "all_frames": true
    },
    {
      "matches": ["*://*.digitaal.noordhoff.nl/*"],
      "js": ["slave_reactapp/injector.js"],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    "slave/*",
    "slave_digilino/*",
    "slave_reactapp/*"
  ]
}
